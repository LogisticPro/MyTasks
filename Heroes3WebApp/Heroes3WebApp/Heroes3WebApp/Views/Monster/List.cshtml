@model List<MonsterListViewModel>

@{
    ViewData["Title"] = "Heroes 3 creatures";
}

<h1>@ViewData["Title"]</h1>

<hr>

@foreach (var item in Model)
{
    <div class="row">
        <div class="col-md-2"><img src="data:image/gif;base64, @Convert.ToBase64String(item.Picture)" /> @item.Name</div>
        <div class="col-md-1">@item.Level</div>
        <div class="col-md-1">@item.Hp</div>
        <div class="col-md-1">@item.Attack</div>
        <div class="col-md-1">@item.Defence</div>
        <div class="col-md-1">@item.Damage</div>
    </div>
}