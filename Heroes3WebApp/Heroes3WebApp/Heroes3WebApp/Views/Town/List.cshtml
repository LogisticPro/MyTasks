@model List<TownListViewModel>

@{
    ViewData["Title"] = "Heroes 3 towns";
}

<h1>@ViewData["Title"]</h1>

<hr>

@foreach(var item in Model)
{
    <p><a class="nav-link text-dark" asp-area="" asp-controller="Town" asp-action="TownInfo" asp-route-id=@item.Id>
            @if (item.Picture != null)
            {
                <img src="data:image/gif;base64, @Convert.ToBase64String(item.Picture)"/>
            }
            @item.Name </a></p>
}

<a class="nav-link text-dark" asp-area="" asp-controller="Town" asp-action="CreateTown"> add </a>
